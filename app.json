    "/user/{id}": {
      "patch": {
        "tags": [
          "Change to mentor"
        ],
        "summary": "Admin change user to mentor",
        "description": "",
        "operationId": "changeToMentor",
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [
          {
            "name": "x-auth-token",
            "in": "header",
            "type": "string",
            "description": "The value of admin token"
          },
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "integer",
            "format": "int64"
          }
        ],
        "responses": {
          "200": {
            "description": "User account changed to mentor"
          },
          "403": {
            "description": "You are not authorized to perform this action."
          },
          "401": {
            "description": "The User associated with this token doesn't exist."
          },
          "400": {
            "description": "Bad request,invalid user id "
          }
        }
      }
    },
    "/mentors": {
      "get": {
        "tags": [
          "View  Mentors"
        ],
        "summary": "Returns  mentors",
        "description": "",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "x-auth-token",
            "in": "header",
            "type": "string",
            "description": "The value of user token"
          }
        ],
        "responses": {
          "200": {
            "description": "List of all mentor",
